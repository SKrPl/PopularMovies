<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_padding_small"
    android:paddingTop="@dimen/layout_padding">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_item_poster_height"
        android:id="@+id/movie_poster"
        android:background="@color/poster_image_background"
        android:contentDescription="@string/movie_poster_desc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/movie_name"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/movie_item_name_text_size" />

</LinearLayout>